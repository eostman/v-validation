{
  "compilerOptions": {
    "target": "esnext",
    "composite": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@finnair/v-validation-core": ["packages/core/*"],
      "@finnair/v-validation-moment": ["packages/moment/*"]
    }
  }
}
